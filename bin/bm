#!/usr/bin/env sh

if [ $# -gt 1 ]; then
	URL=$(xprop -id $1 $2 | cut -d '"' -f2 | sed 's/.*https*:\/\/\(www\.\)\?//')
else
	URL=$1
fi

ESCAPED=$(echo "$URL" | sed -e 's/[]\/\$*.^[]/\\&/g')
ESCAPED="^$ESCAPED$"

if grep -q "$ESCAPED" "$HOME/.surf/bookmarks"; then
	sed --follow-symlinks -i "/$ESCAPED/d" ~/.surf/bookmarks
else
	echo $URL >> ~/.surf/bookmarks
fi
